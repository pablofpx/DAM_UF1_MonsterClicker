<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_quests"
    tools:context=".QuestFragment">

    <LinearLayout
        android:id="@+id/quest_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/monster1"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <ImageView
            android:id="@+id/quest_star"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ghost_star"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/monster2"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <ImageView
            android:id="@+id/quest_pakman"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/physical_pakman"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/monster3"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <ImageView
            android:id="@+id/quest_ghost"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ghost_squid"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/monster4"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <ImageView
            android:id="@+id/quest_incognito"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/weapon_hand"
            android:layout_gravity="center"/>
        
    </LinearLayout>
</ScrollView>