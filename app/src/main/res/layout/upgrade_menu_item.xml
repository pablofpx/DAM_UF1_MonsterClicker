<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/upgrade_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ghost_star"
        android:layout_gravity="start|center" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/upgrade_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:fontFamily="casual"
            android:layout_marginBottom="20dp"
            android:text="Una mejora con texto largo muy muy largo"
            android:textAlignment="center"
            android:layout_gravity="center|top"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/upgrade_description"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="casual"
            android:text="mejora pasiva que tambien teiene un texto larguyisimo dios mio"
            android:textAlignment="center"
            android:layout_gravity="center|bottom"
            android:textColor="@color/black" />

    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/upgrade_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:fontFamily="casual"
            android:text="1211"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:fontFamily="casual"
            android:text="pearlstones"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="@color/cyan"/>
    </LinearLayout>
</LinearLayout>