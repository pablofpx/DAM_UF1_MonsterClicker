<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonsterFragment"
    android:orientation="vertical"
    android:background="@drawable/background">

    <FrameLayout
        android:id="@+id/topmenu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/topmenu_coins"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/currency"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/topmenu_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:fontFamily="casual"
                android:layout_marginEnd="90dp"
                android:layout_gravity="center"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/topmenu_options"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/questionmark"
            android:layout_gravity="center|end" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/monster_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_weight="1">

        <!--monster-->
        <ImageView
            android:id="@+id/monster_monster"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/monster_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/attack"
            android:layout_gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>